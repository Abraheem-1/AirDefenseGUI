<Window x:Class="DefenseControlSystem.MainWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:DefenseControlSystem"
             Width="1393" Height="824"
             Closing="Window_Closing"
             KeyDown="Window_KeyDown"
             KeyUp="Window_KeyUp"
             Loaded="Window_Loaded"
             Focusable="True">

    <Window.Resources>
        <local:StringNullOrEmptyToVisibilityConverter x:Key="StringNullOrEmptyToVisibilityConverter"/>
        <local:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <!-- Gradients -->
        <LinearGradientBrush x:Key="PanelGradient" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#32353A" Offset="0"/>
            <GradientStop Color="#25272B" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="ButtonGradient" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#4A4D52" Offset="0"/>
            <GradientStop Color="#35383D" Offset="1"/>
        </LinearGradientBrush>

        <!-- Colors -->
        <SolidColorBrush x:Key="BackgroundColor" Color="#202225"/>
        <SolidColorBrush x:Key="HeaderColor" Color="#191B1F"/>
        <SolidColorBrush x:Key="PanelStroke" Color="#464950"/>
        <SolidColorBrush x:Key="TextWhite" Color="White"/>
        <SolidColorBrush x:Key="TextGray" Color="#AAAAAA"/>
        <SolidColorBrush x:Key="SuccessGreen" Color="#4CAF50"/>
        <SolidColorBrush x:Key="ErrorRed" Color="#F44336"/>
        <SolidColorBrush x:Key="WarningYellow" Color="#FFC107"/>
        <SolidColorBrush x:Key="PrimaryBlue" Color="#3F51B5"/>
        <SolidColorBrush x:Key="TargetRed" Color="#FF5252"/>

        <!-- Text Styles -->
        <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Arial"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{StaticResource TextWhite}"/>
        </Style>

        <Style x:Key="SubHeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Arial"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{StaticResource TextWhite}"/>
        </Style>

        <Style x:Key="NormalTextStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Arial"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="{StaticResource TextWhite}"/>
        </Style>

        <Style x:Key="SmallTextStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Arial"/>
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="Foreground" Value="{StaticResource TextGray}"/>
        </Style>

        <Style x:Key="LogTextStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Arial"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Foreground" Value="{StaticResource TextGray}"/>
        </Style>

        <Style x:Key="NormalCheckBoxStyle" TargetType="CheckBox">
            <Setter Property="FontFamily" Value="Arial"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="{StaticResource TextWhite}"/>
        </Style>

        <Style x:Key="ComboBoxStyle" TargetType="ComboBox">
            <Setter Property="FontFamily" Value="Arial"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="{StaticResource BackgroundColor}"/>
        </Style>

        <Style x:Key="NormalRadioButtonStyle" TargetType="RadioButton">
            <Setter Property="FontFamily" Value="Arial"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="{StaticResource TextWhite}"/>
        </Style>

    </Window.Resources>

    <Grid>
        <!-- Background -->
        <Rectangle Fill="{StaticResource BackgroundColor}"/>

        <!-- Header -->
        <Rectangle Height="60" VerticalAlignment="Top" Fill="{StaticResource HeaderColor}"/>

        <!-- Header Content -->
        <Grid Height="60" VerticalAlignment="Top">
            <!-- Title -->
            <TextBlock Text="SAVUNMA KONTROL SİSTEMİ" 
                      Style="{StaticResource HeaderTextStyle}"
                      Margin="20,0,0,0" 
                      VerticalAlignment="Center"/>

            <!-- Status Indicators -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" 
                       VerticalAlignment="Top" Margin="0,15,200,0">
                <StackPanel Orientation="Vertical" Margin="0,0,20,0">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Sistem Durumu:" Style="{StaticResource NormalTextStyle}" 
                                  Foreground="{StaticResource TextGray}"/>
                        <Ellipse x:Name="SystemStatusEllipse" Width="12" Height="12"
                                 Fill="{StaticResource SuccessGreen}" Margin="10,0,5,0"/>
                        <TextBlock x:Name="SystemStatusText" Text="Aktif"
                                   Style="{StaticResource NormalTextStyle}" Foreground="{StaticResource SuccessGreen}"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="39,5,0,0">
                        <TextBlock Text="Bağlantı:" Style="{StaticResource NormalTextStyle}" 
                                  Foreground="{StaticResource TextGray}"/>
                        <Ellipse x:Name="ConnectionStatusEllipse" Width="12" Height="12"
                                 Fill="{StaticResource SuccessGreen}" Margin="10,0,5,0"/>
                        <TextBlock x:Name="ConnectionStatusText" Text="Bağlı"
                                   Style="{StaticResource NormalTextStyle}" Foreground="{StaticResource SuccessGreen}"/>
                    </StackPanel>
                </StackPanel>
            </StackPanel>

            <!-- Emergency Stop Button -->
            <Button Content="ACİL DURDURMA" 
                   Width="120" Height="40" 
                   HorizontalAlignment="Right" 
                   VerticalAlignment="Center"
                   Margin="0,0,10,0"
                   Background="{StaticResource ErrorRed}"
                   Foreground="{StaticResource TextWhite}"
                   FontFamily="Arial" FontSize="12" FontWeight="Bold"
                   BorderThickness="0"/>
        </Grid>

        <!-- Main Content Area -->
        <Grid Margin="10,70,10,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="800"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Column will be in Part 2 -->
            <!-- Left Column - Camera Panel and Logs -->
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="460"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="190"/>
                </Grid.RowDefinitions>

                <!-- Camera Feed Panel -->
                <Border Grid.Row="0" Background="{StaticResource PanelGradient}" 
            BorderBrush="{StaticResource PanelStroke}" BorderThickness="1" 
            CornerRadius="6">
                    <Grid>
                        <!-- Camera Feed Background -->
                        <Border Background="#15161A" Margin="15" CornerRadius="3">
                            <Grid>
                                <!-- Camera Header -->
                                <Border Height="30" VerticalAlignment="Top" Background="#1E1F23" 
                            CornerRadius="3,3,0,0">
                                    <Grid>
                                        <TextBlock Text="Kamera Görüntüsü" 
                                      Style="{StaticResource SubHeaderTextStyle}"
                                      FontSize="14" Margin="15,0,0,0" 
                                      VerticalAlignment="Center"/>

                                        <!-- Camera Controls -->
                                        <StackPanel Orientation="Horizontal" 
                                       HorizontalAlignment="Right" 
                                       VerticalAlignment="Center" Margin="0,0,15,0">
                                            <Button Width="30" Height="30" Background="#2A2B30" 
                                       BorderThickness="0" Margin="0,0,5,0">
                                                <Path Data="M12,2A10,10 0 0,1 22,12A10,10 0 0,1 12,22A10,10 0 0,1 2,12A10,10 0 0,1 12,2M12,4A8,8 0 0,0 4,12A8,8 0 0,0 12,20A8,8 0 0,0 20,12A8,8 0 0,0 12,4M12,6A6,6 0 0,1 18,12A6,6 0 0,1 12,18A6,6 0 0,1 6,12A6,6 0 0,1 12,6M12,8A4,4 0 0,0 8,12A4,4 0 0,0 12,16A4,4 0 0,0 16,12A4,4 0 0,0 12,8Z" 
                                          Fill="White" Stretch="Uniform" Width="16" Height="16"/>
                                            </Button>
                                            <Button Width="30" Height="30" Background="#2A2B30" 
                                       BorderThickness="0" Content="+" 
                                       Foreground="White" FontSize="18" FontWeight="Bold"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>

                                <!-- Camera Feed Content -->
                                <Grid Margin="0,30,0,0">
                                    <!--<Image x:Name="CameraImage"
                                           Stretch="Uniform"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/> -->
                                    <Border Width="550" HorizontalAlignment="Center" Margin="0,-1,0,-1">
                                        <Image x:Name="cameraPreview"
                                               Stretch="Uniform"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"/>
                                    </Border>

                                    <!-- Target Markers -->
                                    <Canvas x:Name="TargetMarkers" IsHitTestVisible="False"
                                            HorizontalAlignment="Center" Margin="0,199,0,199">
                                        <Rectangle Width="100" Height="100" 
                                               HorizontalAlignment="Center" VerticalAlignment="Center"
                                               Margin="-50,-50,0,0"
                                               Stroke="{StaticResource TargetRed}" StrokeThickness="2"
                                               StrokeDashArray="5,5" Fill="Transparent"/>
                                        <Ellipse Width="10" Height="10" 
                                             Fill="{StaticResource TargetRed}"
                                             HorizontalAlignment="Center" VerticalAlignment="Center"
                                             Margin="-5,-5,0,0"/>
                                    </Canvas>

                                    <!-- Range Indicator -->
                                    <Border x:Name="RangeIndicator"
                                            Background="#80000000" CornerRadius="3" 
                                            HorizontalAlignment="Left" VerticalAlignment="Bottom"
                                            Margin="30,0,0,20" Padding="10,5">
                                        <TextBlock x:Name="RangeTextBlock"
                                                   Text="Menzil: --- m" 
                                                   Style="{StaticResource SubHeaderTextStyle}"
                                                   FontSize="16" Foreground="{StaticResource SuccessGreen}"/>
                                    </Border>
                                </Grid>
                            </Grid>
                        </Border>
                    </Grid>
                </Border>

                <!-- Image Controls -->
                <Border Grid.Row="1" Background="{StaticResource PanelGradient}" 
            BorderBrush="{StaticResource PanelStroke}" BorderThickness="1" 
            CornerRadius="6">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="15,0">
                        <!-- Radio Button Controls -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,20,0">
                            <Ellipse Width="12" Height="12" Fill="{StaticResource SuccessGreen}"/>
                            <TextBlock Text="Ham Görüntü" Style="{StaticResource NormalTextStyle}" 
                          Margin="10,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,0,20,0">
                            <Ellipse Width="12" Height="12" Stroke="White" StrokeThickness="1" 
                        Fill="Transparent"/>
                            <TextBlock Text="İşlenmiş Görüntü" Style="{StaticResource NormalTextStyle}" 
                          Margin="10,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>

                        <!-- Checkbox Controls -->
                        <!-- Hedef İşaretlerini Göster -->
                        <CheckBox x:Name="TargetMarkersCheckbox"
                                  Content="Hedef İşaretlerini Göster"
                                  Foreground="White"
                                  Style="{StaticResource NormalCheckBoxStyle}"
                                  Margin="0,0,20,0"
                                  Checked="TargetMarkersCheckbox_Checked"
                                  Unchecked="TargetMarkersCheckbox_Unchecked"/>


                        <!-- Menzil Göstergesini Göster -->
                        <CheckBox x:Name="MenzilCheckbox"
                                  Content="Menzil Göstergesini Göster"
                                  Foreground="White"
                                  Style="{StaticResource NormalCheckBoxStyle}"
                                  Margin="0,0,20,0"
                                  IsChecked="True"
                                  Checked="MenzilCheckbox_Checked"
                                  Unchecked="MenzilCheckbox_Unchecked"/>

                        <!-- Yasak Bölgeleri Göster (if needed later) -->
                        <CheckBox x:Name="ForbiddenZonesCheckbox"
                                  Content="Yasak Bölgeleri Göster"
                                  Foreground="White"
                                  Style="{StaticResource NormalCheckBoxStyle}"
                                  Margin="0,0,20,0"/>
                    </StackPanel>
                </Border>

                <!-- Bottom Row - Logs and Operations -->
                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="355"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Logs Section -->
                    <Border Grid.Column="0" Background="#2D2F33" 
                BorderBrush="{StaticResource PanelStroke}" BorderThickness="1" 
                CornerRadius="4">
                        <Grid>
                            <TextBlock Text="Kayıtlar ve Uyarılar" 
                          Style="{StaticResource SubHeaderTextStyle}"
                          Margin="15,25,0,0" VerticalAlignment="Top"/>

                            <!-- Log Content -->
                            <Border Background="#1A1B1F" BorderBrush="#333333" BorderThickness="1" 
                        CornerRadius="3" Margin="15,50,15,15">
                                <ScrollViewer VerticalScrollBarVisibility="Auto">
                                    <StackPanel x:Name="LogStackPanel" Margin="10"/>
                                </ScrollViewer>
                            </Border>
                        </Grid>
                    </Border>

                    <!-- Operations Section -->
                    <Border Grid.Column="1" Background="#2D2F33" 
                BorderBrush="{StaticResource PanelStroke}" BorderThickness="1" 
                CornerRadius="4" Margin="10,0,0,0">
                        <Grid>
                            <StackPanel Orientation="Horizontal" Margin="15,14,0,0" VerticalAlignment="Top">
                                <Path Data="M19,21H5A2,2 0 0,1 3,19V5A2,2 0 0,1 5,3H16L21,8V19A2,2 0 0,1 19,21M17,21V14H7V21M7,3V8H15" 
                          Fill="White" Stretch="Uniform" Width="18" Height="18"/>
                                <TextBlock Text="Kayıtlı Operasyonlar" 
                              Style="{StaticResource SubHeaderTextStyle}"
                              Margin="10,0,0,0"/>
                            </StackPanel>

                            <!-- Operations Content with Scroll -->
                            <Border Background="#17181C" BorderBrush="#333333" BorderThickness="1" 
                                    CornerRadius="3" Margin="10,40,20,48">
                                <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="0,-1,0,-1">
                                    <StackPanel x:Name="OperationsPanel" Margin="5,10,5,10">
                                        <!-- Operation 1 - Active -->
                                        <Border Background="#2A3558" CornerRadius="2" Margin="0,0,0,5" 
                                                MouseLeftButtonDown="OperationBorder_MouseLeftButtonDown">
                                            <Grid>
                                                <Rectangle Width="5" HorizontalAlignment="Left" Fill="{StaticResource SuccessGreen}"/>
                                                <TextBlock Text="1.Asama: Balon Renki Ayirilmaksizin"
                                                           Style="{StaticResource NormalTextStyle}"
                                                           FontWeight="Bold" Margin="15,5,80,5"/>
                                                <Button Content="AKTİF" Width="60" Height="20"
                                                        HorizontalAlignment="Right" Margin="0,2,10,2"
                                                        Background="{StaticResource ButtonGradient}"
                                                        Foreground="White" FontSize="11" BorderThickness="0"
                                                        Click="LoadOperation_Click"/>
                                            </Grid>
                                        </Border>

                                        <!-- Operation 2 -->
                                        <Border Background="#2A2B30" CornerRadius="2" Margin="0,0,0,5"
                                                MouseLeftButtonDown="OperationBorder_MouseLeftButtonDown">
                                            <Grid>
                                                <TextBlock Text="2.Asama: Balon Dust Dusman"
                                                           Style="{StaticResource NormalTextStyle}"
                                                           FontWeight="Bold" Margin="15,5,80,5"/>
                                                <Button Content="Yükle" Width="60" Height="20"
                                                        HorizontalAlignment="Right" Margin="0,2,10,2"
                                                        Background="{StaticResource ButtonGradient}"
                                                        Foreground="White" FontSize="11" BorderThickness="0"
                                                        Click="LoadOperation_Click"/>
                                            </Grid>
                                        </Border>

                                        <!-- Operation 3 -->
                                        <Border Background="#2A2B30" CornerRadius="2"
                                                MouseLeftButtonDown="OperationBorder_MouseLeftButtonDown">
                                            <Grid>
                                                <TextBlock Text="3.Asama: Hedef Tanimlanmasi"
                                                           Style="{StaticResource NormalTextStyle}"
                                                           FontWeight="Bold" Margin="15,5,80,5"/>
                                                <Button Content="Yükle" Width="60" Height="20"
                                                        HorizontalAlignment="Right" Margin="0,2,10,2"
                                                        Background="{StaticResource ButtonGradient}"
                                                        Foreground="White" FontSize="11" BorderThickness="0"
                                                        Click="LoadOperation_Click"/>
                                            </Grid>
                                        </Border>
                                    </StackPanel>
                                </ScrollViewer>
                            </Border>

                            <!-- Hidden Operation Input Section -->
                            <StackPanel x:Name="OperationInputPanel" Orientation="Vertical"
                                        Margin="15,0,15,10" VerticalAlignment="Bottom"
                                        Visibility="Collapsed">

                                <!-- Input fields here -->
                                <!-- Operation Name -->
                                <Grid Margin="0,5" Height="25">
                                    <TextBox x:Name="OperationNameTextBox"
                                             Background="#2A2B30"
                                             Foreground="White"
                                             BorderBrush="#555"
                                             CaretBrush="White"
                                             VerticalContentAlignment="Center"
                                             Padding="5,0,0,0"
                                             GotFocus="TextBox_GotFocus"
                                             LostFocus="TextBox_LostFocus"/>
                                    <TextBlock x:Name="OperationNameHint"
                                               Text="Operasyon Adı"
                                               Foreground="Gray"
                                               Margin="10,0,0,0"
                                               VerticalAlignment="Center"
                                               IsHitTestVisible="False"/>
                                </Grid>

                                <!-- Mode ComboBox -->
                                <ComboBox x:Name="ModeComboBox" Margin="0,5" SelectedIndex="0"
                                          Height="25" Background="#2A2B30" Foreground="Black">
                                    <ComboBoxItem Content="Otomatik"/>
                                    <ComboBoxItem Content="Manuel"/>
                                </ComboBox>

                                <!-- Target ComboBox -->
                                <ComboBox x:Name="TargetComboBox" Margin="0,5" SelectedIndex="0"
                                          Height="25" Background="#2A2B30" Foreground="Black">
                                    <ComboBoxItem Content="Tümü"/>
                                    <ComboBoxItem Content="Seçili"/>
                                </ComboBox>

                                <!-- Color ComboBox -->
                                <ComboBox x:Name="ColorComboBox" Margin="0,5" SelectedIndex="0"
                                          Height="25" Background="#2A2B30" Foreground="Black">
                                    <ComboBoxItem Content="Red"/>
                                    <ComboBoxItem Content="Blue"/>
                                    <ComboBoxItem Content="All"/>
                                </ComboBox>

                                <!-- Submit Button -->
                                <Button Content="✅ Operasyon Ekle"
                                        Click="AddOperation_Click"
                                        Background="{StaticResource ButtonGradient}" Foreground="White"
                                        FontSize="12" Margin="0,10,0,0" Height="28"/>
                            </StackPanel>



                            <!-- Operation Buttons -->
                            <StackPanel x:Name="OperationButtonsPanel" Orientation="Horizontal" 
                                        HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,15,15">
                                <Button Content="Sil" Width="90" Height="28" 
                                        Background="#555555" Foreground="White"
                                        FontSize="12" BorderThickness="0" Margin="0,0,5,0"
                                        Click="DeleteLastOperation_Click"/>
                                <Button Content="Yeni Ekle" Width="90" Height="28" 
                                        Background="{StaticResource ButtonGradient}" Foreground="White"
                                        FontSize="12" BorderThickness="0" Click="ShowOperationInputPanel"/>
                            </StackPanel>

                        </Grid>
                    </Border>
                </Grid>
            </Grid>
            <!-- Right Column will be in Part 3 -->
            <!-- Right Column - Controls and Status -->
            <Grid Grid.Column="1" Margin="10,0,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="360"/>
                    <RowDefinition Height="100"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Control Panel -->
                <Border Grid.Row="0" Background="#2D2F33" 
            BorderBrush="{StaticResource PanelStroke}" BorderThickness="1" 
            CornerRadius="4" Margin="0,0,0,95" Grid.RowSpan="2">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Left Side - System Controls -->
                        <StackPanel Grid.Column="0" Margin="15,15,15,15">
                            <TextBlock Text="Sistem Kontrolleri" 
                          Style="{StaticResource SubHeaderTextStyle}" Margin="0,0,0,15"/>

                            <!-- System On/Off -->
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                                <TextBlock Text="Sistem:" Style="{StaticResource NormalTextStyle}" 
                              VerticalAlignment="Center" Margin="0,0,5,0"/>
                                <Border Background="{StaticResource PrimaryBlue}" CornerRadius="14" 
                           Width="80" Height="28">
                                    <TextBlock Text="AÇIK" Style="{StaticResource NormalTextStyle}" 
                                  HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <Button Content="Kalibrasyonu Başlat" Width="120" Height="28" 
                           Background="{StaticResource PrimaryBlue}" Foreground="White"
                           FontSize="12" BorderThickness="0" Margin="10,0,0,0"/>
                            </StackPanel>

                            <!-- Operation Mode -->
                            <TextBlock Text="Çalışma Modu:" Style="{StaticResource NormalTextStyle}" 
                          Margin="0,0,0,10"/>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                <RadioButton x:Name="ManualRadioButton" Style="{StaticResource NormalRadioButtonStyle}"
                                             Content="Manuel" GroupName="ModeGroup" />
                                <RadioButton x:Name="SemiAutoRadioButton" Style="{StaticResource NormalRadioButtonStyle}"
                                             Content="Yarı-Otomatik" GroupName="ModeGroup" Margin="20,0,0,0"/>
                                <RadioButton x:Name="FullAutoRadioButton" Style="{StaticResource NormalRadioButtonStyle}"
                                             Content="Tam Otomatik" GroupName="ModeGroup" Margin="20,0,0,0"/>
                            </StackPanel>
                            <RadioButton x:Name="SpecialRadioButton" Style="{StaticResource NormalRadioButtonStyle}"
                                             Content="Özel" GroupName="ModeGroup" Margin="0,0,0,10"/>


                            <!-- Manual Controls -->
                            <TextBlock Text="Manuel Kontroller" 
                          Style="{StaticResource SubHeaderTextStyle}" Margin="0,0,0,5"/>
                            <Grid Width="180" Height="170">
                                <!-- Up Button -->
                                <Button x:Name="UpButton" Content="▲" Width="40" Height="40"
                                        Background="#333333" Foreground="White"
                                        FontSize="16" BorderThickness="0"
                                        PreviewMouseLeftButtonDown="UpButton_Down"
                                        PreviewMouseLeftButtonUp="StopElevation"
                                        MouseLeave="StopElevation"
                                        HorizontalAlignment="Center" VerticalAlignment="Top"/>

                                <!-- Left Button -->
                                <Button x:Name="LeftButton" Content="◄" Width="40" Height="40"
                                        Background="#333333" Foreground="White"
                                        FontSize="16" BorderThickness="0"
                                        PreviewMouseLeftButtonDown="LeftButton_Down"
                                        PreviewMouseLeftButtonUp="StopRotation"
                                        MouseLeave="StopRotation"
                                        HorizontalAlignment="Left" VerticalAlignment="Center"/>

                                <!-- Right Button -->
                                <Button x:Name="RightButton" Content="►" Width="40" Height="40"
                                        Background="#333333" Foreground="White"
                                        FontSize="16" BorderThickness="0"
                                        PreviewMouseLeftButtonDown="RightButton_Down"
                                        PreviewMouseLeftButtonUp="StopRotation"
                                        MouseLeave="StopRotation"
                                        HorizontalAlignment="Right" VerticalAlignment="Center"/>

                                <!-- Down Button -->
                                <Button x:Name="DownButton" Content="▼" Width="40" Height="40"
                                        Background="#333333" Foreground="White"
                                        FontSize="16" BorderThickness="0"
                                        PreviewMouseLeftButtonDown="DownButton_Down"
                                        PreviewMouseLeftButtonUp="StopElevation"
                                        MouseLeave="StopElevation"
                                        HorizontalAlignment="Center" VerticalAlignment="Bottom"/>

                                <!-- Fire Button -->
                                <Button x:Name="FireButton" Content="ATEŞ" Width="80" Height="80"
                                        Background="{StaticResource ErrorRed}" Foreground="White"
                                        FontSize="16" FontWeight="Bold" BorderThickness="0"
                                        Click="FireButton_Click"
                                        HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Grid>

                            <!-- Direction Pad -->

                            <!-- Speed Adjustment -->
                            <TextBlock Text="Hareket Hızı:" Style="{StaticResource NormalTextStyle}" 
                          Margin="0,0,0,10"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0" Text="Yavaş" Style="{StaticResource SmallTextStyle}" 
                              VerticalAlignment="Center"/>
                                <Slider Grid.Column="1" Minimum="0" Maximum="100" Value="50" 
                           Margin="10,0,10,0" VerticalAlignment="Center"/>
                                <TextBlock Grid.Column="2" Text="Hızlı" Style="{StaticResource SmallTextStyle}" 
                              VerticalAlignment="Center"/>
                            </Grid>
                        </StackPanel>

                        <!-- Right Side - Target Parameters -->
                        <StackPanel Grid.Column="1" Margin="15,15,15,15">
                            <TextBlock Text="Hedef Parametreleri" 
                          Style="{StaticResource SubHeaderTextStyle}" Margin="0,0,0,15"/>

                            <!-- Algılanma Şekli -->
                            <!-- Algılanma Şekli -->
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                <TextBlock Text="Algılanma Şekli:"
                                             Style="{StaticResource NormalTextStyle}" 
                                             VerticalAlignment="Center"/>
                                <RadioButton x:Name="NormalModeRadio"
                                               Content="Normal"
                                               Style="{StaticResource NormalRadioButtonStyle}" 
                                               GroupName="DetectMode"
                                               IsChecked="True"
                                               Checked="DetectModeRadio_Checked"
                                               Margin="10,0,0,0"/>
                                <RadioButton x:Name="DustEnemyModeRadio"
                                               Content="Düst-Düşman"
                                               Style="{StaticResource NormalRadioButtonStyle}" 
                                               GroupName="DetectMode"
                                               Checked="DetectModeRadio_Checked"
                                               Margin="10,0,0,0"/>
                            </StackPanel>

                            <!-- Target Type -->
                            <TextBlock Text="Hedef Türü:" 
                                       Style="{StaticResource NormalTextStyle}" 
                                       Margin="0,10,0,5"/>
                            <ComboBox x:Name="TargetTypeComboBox"
                                      Style="{StaticResource ComboBoxStyle}"
                                      Height="28" Margin="0,0,0,15"
                                      VerticalAlignment="Center">
                                <ComboBoxItem Content="Balon" />
                                <ComboBoxItem Content="Daire" />
                                <ComboBoxItem Content="Dörtgen" />
                                <ComboBoxItem Content="Üçgen" />
                                <ComboBoxItem Content="Hedef Tanımlanması" />
                            </ComboBox>

                            <!-- Normal Mode Renk -->
                            <StackPanel x:Name="NormalColorPanel" Margin="0,0,0,15">
                                <TextBlock Text="Renk:"
                                             Style="{StaticResource NormalTextStyle}"
                                             Margin="0,0,0,5"/>
                                <ComboBox x:Name="SystemColorComboBox"
                                            Style="{StaticResource ComboBoxStyle}"
                                            Height="28">
                                    <ComboBoxItem Content="Kırmızı"/>
                                    <ComboBoxItem Content="Mavi"/>
                                    <ComboBoxItem Content="Yeşil"/>
                                </ComboBox>
                            </StackPanel>

                            <!-- Düst-Düşman Mode Renk (Compact, Same Row) -->
                            <StackPanel x:Name="DustEnemyColorPanel" Visibility="Collapsed" Margin="0,0,0,15">
                                <TextBlock Text="Renk (Düst / Düşman):"
                                             Style="{StaticResource NormalTextStyle}"
                                             Margin="0,0,0,5"/>
                                <StackPanel Orientation="Horizontal">
                                    <ComboBox x:Name="DustColorComboBox"
                                              Style="{StaticResource ComboBoxStyle}"
                                              Height="28"
                                              Width="Auto"
                                              MinWidth="100"
                                              Margin="0,0,5,0">
                                        <ComboBoxItem Content="Sarı"/>
                                        <ComboBoxItem Content="Turuncu"/>
                                    </ComboBox>

                                    <ComboBox x:Name="EnemyColorComboBox"
                                              Style="{StaticResource ComboBoxStyle}"
                                              Height="28"
                                              Width="Auto"
                                              MinWidth="100">
                                        <ComboBoxItem Content="Kırmızı"/>
                                        <ComboBoxItem Content="Mor"/>
                                    </ComboBox>
                                </StackPanel>
                            </StackPanel>

                            <!-- Target Size -->
                            <TextBlock Text="Hedef Boyutu:" Style="{StaticResource NormalTextStyle}" 
                          Margin="0,0,0,10"/>
                            <Grid Margin="0,0,0,20">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0" Text="Küçük" Style="{StaticResource SmallTextStyle}" 
                              VerticalAlignment="Center"/>
                                <Slider Grid.Column="1" Minimum="0" Maximum="100" Value="60" 
                           Margin="10,0,10,0" VerticalAlignment="Center"/>
                                <TextBlock Grid.Column="2" Text="Büyük" Style="{StaticResource SmallTextStyle}" 
                              VerticalAlignment="Center"/>
                            </Grid>

                            <!-- Detection Sensitivity -->
                            <TextBlock Text="Algılama Hassasiyeti:" Style="{StaticResource NormalTextStyle}" 
                          Margin="0,0,0,10"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0" Text="Düşük" Style="{StaticResource SmallTextStyle}" 
                              VerticalAlignment="Center"/>
                                <Slider Grid.Column="1" Minimum="0" Maximum="100" Value="80" 
                           Margin="10,0,10,0" VerticalAlignment="Center"/>
                                <TextBlock Grid.Column="2" Text="Yüksek" Style="{StaticResource SmallTextStyle}" 
                              VerticalAlignment="Center"/>
                            </Grid>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Status Panel -->
                <Border Grid.Row="1" Background="#2D2F33" 
            BorderBrush="{StaticResource PanelStroke}" BorderThickness="1" 
            CornerRadius="4" Margin="0,5,0,0">
                    <Grid>
                        <TextBlock Text="Sistem Durumu" 
                      Style="{StaticResource SubHeaderTextStyle}" 
                      Margin="15,8,0,0" VerticalAlignment="Top"/>

                        <StackPanel Orientation="Horizontal" Margin="15,0,15,15" 
                       VerticalAlignment="Bottom">
                            <!-- System Status -->
                            <StackPanel Margin="0,0,15,0">
                                <TextBlock Text="Sistem Durumu" Style="{StaticResource SmallTextStyle}" 
                              Margin="0,0,0,5"/>
                                <Border Background="#333333" CornerRadius="3" Width="100" Height="30">
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" 
                                   HorizontalAlignment="Center">
                                        <Ellipse Width="12" Height="12" Fill="{StaticResource SuccessGreen}"/>
                                        <TextBlock Text="Aktif" Style="{StaticResource NormalTextStyle}" 
                                      Margin="10,0,0,0"/>
                                    </StackPanel>
                                </Border>
                            </StackPanel>

                            <!-- Motor Status -->
                            <StackPanel Margin="0,0,15,0">
                                <TextBlock Text="Motor Durumu" Style="{StaticResource SmallTextStyle}" 
                              Margin="0,0,0,5"/>
                                <Border Background="#333333" CornerRadius="3" Width="100" Height="30">
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" 
                                   HorizontalAlignment="Center">
                                        <Ellipse Width="12" Height="12" Fill="{StaticResource SuccessGreen}"/>
                                        <TextBlock Text="Çalışıyor" Style="{StaticResource NormalTextStyle}" 
                                      Margin="10,0,0,0"/>
                                    </StackPanel>
                                </Border>
                            </StackPanel>

                            <!-- Connection Status -->
                            <StackPanel>
                                <TextBlock Text="Bağlantı Durumu" Style="{StaticResource SmallTextStyle}" 
                              Margin="0,0,0,5"/>
                                <Border Background="#333333" CornerRadius="3" Width="210" Height="30">
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" 
                                   HorizontalAlignment="Center">
                                        <Ellipse Width="12" Height="12" Fill="{StaticResource SuccessGreen}"/>
                                        <TextBlock Text="Bağlı" Style="{StaticResource NormalTextStyle}" 
                                      Margin="10,0,0,0"/>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Forbidden Zone Visual Legend -->
                <Border Grid.Row="1" Background="#2D2F33" 
            BorderBrush="{StaticResource PanelStroke}" BorderThickness="1" 
            CornerRadius="4" Margin="0,89,0,0" Grid.RowSpan="2">
                    <Grid>
                        <TextBlock Text="Yasak Bölge Açıklaması" 
                      Style="{StaticResource SubHeaderTextStyle}" 
                      Margin="15,0,0,245" VerticalAlignment="Bottom"/>

                        <!-- Visual Legend Content will be in Part 4 -->
                        <!-- Part 4: Radar Display with Forbidden Zones -->
                        <!-- This replaces the placeholder Canvas in the Forbidden Zone Legend Panel -->

                        <Canvas Background="#2D2F33" Margin="50,35,51,18">
                            <!-- Radar Display Background -->
                            <Rectangle Width="440" Height="224" Canvas.Left="10" Canvas.Top="8" 
               Fill="#1E1F23" Stroke="#464950" StrokeThickness="1"/>

                            <!-- Range Circle (Yellow dashed) -->
                            <Ellipse Width="194" Height="194" Canvas.Left="133" Canvas.Top="23"
             Stroke="#FFFF00" StrokeThickness="1" Fill="Transparent"
             StrokeDashArray="3,3"/>

                            <!-- Forbidden Zones -->
                            <!-- Fire Restriction Zone (Red) -->
                            <Path Fill="#FF0000" Opacity="0.3" Canvas.Left="230" Canvas.Top="120">
                                <Path.Data>
                                    <PathGeometry>
                                        <PathFigure StartPoint="0,0">
                                            <LineSegment Point="130,-78"/>
                                            <ArcSegment Point="130,78" Size="123,123" 
                               SweepDirection="Clockwise" IsLargeArc="False"/>
                                            <LineSegment Point="0,0"/>
                                        </PathFigure>
                                    </PathGeometry>
                                </Path.Data>
                            </Path>

                            <!-- Movement Restriction Zone (Blue) -->
                            <Path Fill="#0000FF" Opacity="0.3" Canvas.Left="230" Canvas.Top="120">
                                <Path.Data>
                                    <PathGeometry>
                                        <PathFigure StartPoint="0,0">
                                            <LineSegment Point="-130,-78"/>
                                            <ArcSegment Point="-130,78" Size="123,123" 
                               SweepDirection="CounterClockwise" IsLargeArc="False"/>
                                            <LineSegment Point="0,0"/>
                                        </PathFigure>
                                    </PathGeometry>
                                </Path.Data>
                            </Path>

                            <!-- Base Degree Indicator Circle -->
                            <Ellipse Width="220" Height="220" Canvas.Left="120" Canvas.Top="10"
             Stroke="#555555" StrokeThickness="1" Fill="Transparent"/>


                            <!-- Green Gun indicator Line Group -->
                            <Canvas x:Name="GunGroup" Canvas.Left="230" Canvas.Top="120">
                                <Line x:Name="GunDirectionLine"
                                      X1="0" Y1="0" X2="0" Y2="-100"
                                      Stroke="#00FF00" StrokeThickness="2"
                                      RenderTransformOrigin="0.5,1">
                                    <Line.RenderTransform>
                                        <RotateTransform x:Name="GunDirectionRotate" Angle="0"/>
                                    </Line.RenderTransform>
                                </Line>

                                <!-- Angle Text attached to the tip -->
                                <TextBlock x:Name="GunAngleText"
                                           Text="0°"
                                           Foreground="#00FF00"
                                           FontSize="10" FontWeight="Bold"
                                           FontFamily="Arial"/>
                            </Canvas>




                            <!-- Degree Marks and Labels -->
                            <!-- 0° (North) -->
                            <Line X1="230" Y1="10" X2="230" Y2="3" Stroke="#555555" StrokeThickness="1"/>
                            <TextBlock Text="0°" Canvas.Left="225" Canvas.Top="-5" 
               Foreground="#AAAAAA" FontSize="9" FontFamily="Arial"/>

                            <!-- 90° (East) -->
                            <Line X1="340" Y1="120" X2="347" Y2="120" Stroke="#555555" StrokeThickness="1"/>
                            <TextBlock Text="90°" Canvas.Left="353" Canvas.Top="115" 
               Foreground="#AAAAAA" FontSize="9" FontFamily="Arial"/>

                            <!-- 180° (South) -->
                            <Line X1="230" Y1="230" X2="230" Y2="237" Stroke="#555555" StrokeThickness="1"/>
                            <TextBlock Text="180°" Canvas.Left="220" Canvas.Top="242" 
               Foreground="#AAAAAA" FontSize="9" FontFamily="Arial"/>

                            <!-- 270° (West) -->
                            <Line X1="120" Y1="120" X2="113" Y2="120" Stroke="#555555" StrokeThickness="1"/>
                            <TextBlock Text="270°" Canvas.Left="90" Canvas.Top="115" 
               Foreground="#AAAAAA" FontSize="9" FontFamily="Arial"/>

                            <!-- Gun Elevation Indicator (Vertical Panel) -->
                            <Rectangle Width="40" Height="156" Canvas.Left="12" Canvas.Top="42"
               Fill="#222222" Opacity="0.7" RadiusX="3" RadiusY="3"/>

                            <!-- Elevation Reference Lines -->
                            <!-- 0° Line -->
                            <Line X1="12" Y1="120" X2="52" Y2="120" Stroke="#444444" StrokeThickness="1"/>
                            <TextBlock Text="0°" Canvas.Left="5" Canvas.Top="115" 
               Foreground="#AAAAAA" FontSize="9" FontFamily="Arial"/>

                            <!-- 45° Line -->
                            <Line X1="12" Y1="81" X2="52" Y2="81" Stroke="#444444" StrokeThickness="1"/>
                            <TextBlock Text="45°" Canvas.Left="0" Canvas.Top="76" 
               Foreground="#AAAAAA" FontSize="9" FontFamily="Arial"/>

                            <!-- 90° Line -->
                            <Line X1="12" Y1="42" X2="52" Y2="42" Stroke="#444444" StrokeThickness="1"/>
                            <TextBlock Text="90°" Canvas.Left="0" Canvas.Top="37" 
               Foreground="#AAAAAA" FontSize="9" FontFamily="Arial"/>

                            <!-- -45° Line -->
                            <Line X1="12" Y1="159" X2="52" Y2="159" Stroke="#444444" StrokeThickness="1"/>
                            <TextBlock Text="-45°" Canvas.Left="-5" Canvas.Top="154" 
               Foreground="#AAAAAA" FontSize="9" FontFamily="Arial"/>

                            <!-- -90° Line -->
                            <Line X1="12" Y1="198" X2="52" Y2="198" Stroke="#444444" StrokeThickness="1"/>
                            <TextBlock Text="-90°" Canvas.Left="-5" Canvas.Top="193" 
               Foreground="#AAAAAA" FontSize="9" FontFamily="Arial"/>

                            <!-- Gun Elevation Indicator Arrow -->
                            <Polygon x:Name="ElevationArrow"
                                     Points="52,94 64,99 64,89"
                                     Fill="#00FFFF" Canvas.Left="0" Canvas.Top="0"/>

                            <TextBlock x:Name="ElevationAngleText"
                                       Text="30°" Canvas.Left="68" Canvas.Top="89"
                                       Foreground="#00FFFF" FontSize="9" FontWeight="Bold" FontFamily="Arial"/>

                            <!-- Zone Legend (Bottom Left) -->
                            <Rectangle Width="125" Height="32" Canvas.Left="10" Canvas.Top="200"
               Fill="Black" Opacity="0.5" RadiusX="2" RadiusY="2"/>

                            <!-- Fire Restriction Zone Legend -->
                            <Rectangle Width="8" Height="6" Canvas.Left="16" Canvas.Top="206"
               Fill="#FF0000" Opacity="0.5"/>
                            <TextBlock Text="Ateş Kısıtlama Bölgesi" Canvas.Left="30" Canvas.Top="204" 
               Foreground="White" FontSize="10" FontFamily="Arial"/>

                            <!-- Movement Restriction Zone Legend -->
                            <Rectangle Width="8" Height="6" Canvas.Left="16" Canvas.Top="218"
               Fill="#0000FF" Opacity="0.5"/>
                            <TextBlock Text="Hareket Kısıtlama Bölgesi" Canvas.Left="30" Canvas.Top="216" 
               Foreground="White" FontSize="10" FontFamily="Arial"/>
                        </Canvas>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Grid>


</Window>
